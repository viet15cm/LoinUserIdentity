<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ProjectPage</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.1/css/all.min.css" />
    @*<link rel="stylesheet" href="~/ProjectPage.styles.css" asp-append-version="true" />*@
</head>
<body>
    <header>
        <div class="d-sm-none collapse bg-light" id="navSearch">
            <div class="container my-2">
                <form class="form-inline">
                    <div class="input-group">
                        <div class="input-group-prepend">
                            <span class="input-group-text" id="basic-addon1"><i class="fas fa-search"></i></span>
                        </div>
                        <input type="text" class="form-control" placeholder="Search" aria-label="Username" aria-describedby="basic-addon1">
                    </div>
                </form>
            </div>
        </div>
        
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar bg-dark border">
            <div class="container-fluid p-0 m-0">
                <div class="d-md-none">
                    <ul class="nav">
                        <li class="nav-item">
                            <a class="nav-link btn btn-dark mr-2 text-light" data-toggle="collapse" data-target="#navIconMenu" aria-controls="navIconMenu" aria-expanded="false">
                                <i style="font-size: 20px" class="fas fa-align-justify"></i>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a  class="nav-link btn btn-dark" href="#"><i class="fas fa-home" style="font-size: 20px"></i></a>
                        </li>
                    </ul>

                </div> 

                <div class="d-md-none">
                    <ul class="nav">
                        <li class="nav-link">
                            <img src="https://png.pngtree.com/thumb_back/fw800/background/20190221/ourmid/pngtree-tanabata-full-screen-banner-background-flowers-pink-image_10384.jpg" style="width: 100px; height:30px" />
                        </li>
                    </ul>
                    
                </div>

                <div class="justify-content-between d-none d-sm-block">
                    <ul class="nav">
                        <li class="nav-item">
                            <a class="nav-link btn btn-dark" asp-area="" asp-page="/Home"><i class="fas fa-home" style="font-size: 20px; color:aliceblue"></i></a>
                        </li>
                        <li class="nav-item"><a class="nav-link text-light" asp-area="" asp-page="/Home">Home</a></li>
                        <li class="nav-item"><a class="nav-link text-light" asp-area="" asp-page="/Index">Index</a></li>
                    </ul>
                </div>

                
                        <div class="d-flex justify-content-between ml-0">
                            <ul class="nav">
                                <li class = "nav-item">
                                     <a class="btn btn-outline-info text-light rounded-circle d-sm-none mr-2" style="cursor:pointer;">
                                        <i class="fas fa-star-half-alt"></i>
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a class="btn btn-outline-info text-light rounded-circle d-sm-none mr-2" style="cursor:pointer"
                                        data-bs-toggle="collapse" href="#navSearch" role="button" aria-expanded="false" aria-controls="navSearch">
                                        <i class="fas fa-search"></i>
                                    </a>
                                </li>
                                @await Html.PartialAsync("_LoginPartial")
                      
                            </ul>
                        </div>
                      
                       @* <div class="d-flex justify-content-between ml-0">
                            <form class=" form-inline my-2 my-lg-0 mr-4 d-none d-sm-block">
                                <input class="form-control form-control-sm mr-sm-2" type="search" placeholder="Search" aria-label="Search">
                                <button class="btn btn-sm btn-success my-2 my-sm-0" type="submit">Search</button>
                            </form>
                        </div>*@
            </div>                          
        </nav>
        <div class="d-sm-none collapse bg-dark" id="navIconMenu">
            <div class="container">
                <ul class="navbar-nav">
                    <li class="nav-item"><a href="#" class="nav-link text-light">Home</a></li>
                    <li class="nav-item"><a href="#" class="nav-link text-light">Index</a></li>
                    <li class="nav-item dropdown">
                        <a href="" class="nav-link dropdown-toggle text-light" data-toggle="collapse"
                           data-target="#navList" aria-controls="navList" aria-expanded="false">List</a>
                        <div class="collapse" id="navList">
                            <div class="container">
                                <ul class="navbar-nav">
                                    <li class="nav-item"><a href="" class="nav-link text-light">Home</a></li>
                                    <li class="nav-item"><a href="" class="nav-link text-light">Index</a></li>
                                </ul>
                            </div>
                        </div>
                    </li>
                </ul>
            </div>
        </div>

    </header>
   
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2021 - ProjectPage - <a asp-area="" asp-page="/Privacy">Privacy</a>
        </div>
    </footer>

    
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    
    @RenderSection("Scripts", required: false)
</body>
</html>
